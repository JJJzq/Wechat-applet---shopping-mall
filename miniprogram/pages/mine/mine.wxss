.root {
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: center; */
}

.login{
  margin-top: 20rpx;
  width: 500rpx;
  background-color:lawngreen;
  font-weight: bolder;
}

.top {
  width: 200rpx;
  height: 200rpx;
  /* border-radius: 50%; */
  /* margin-left: 70rpx; */
  margin-top: 30rpx;
}

.touxiang {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.name {
  width: 300rpx;
  line-height: normal;
  text-align: center;
  /* margin-left: 30rpx; */
}

.button {
  width: 100%;
  background: white;
  border: none;
  text-align: left;
  padding: 0px;
  margin-left: 0rpx;
  line-height: 1.3;
  font-size: 40rpx;
}

.my_item {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 25px;
  margin-left: 30rpx;
  background: white;
  border-bottom: 1px solid gainsboro;
  line-height: 1.3;
  font-size: 40rpx;
}

.right_arrow {
  border: solid black;
  border-width: 0 3px 3px 0;
  padding: 3px;
  position: absolute;
  right: 15px;
  /* margin-left: 66%; */
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}

.button::after {
  border: none;
  border-radius: 0;
}

.loginOut{
  width: 300rpx;
  font-weight: bolder;
  margin-top: 20rpx;
