.top {
  width: 750rpx;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  /* background-color: yellow; */
}

/* 搜索框 */
.searchRoot {
  background: rgb(255, 255, 255);
  /* padding: 25rpx; */
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.searchInput {
  flex: 1;
  width: 500rpx;
  height: 70rpx;
  padding-left: 30rpx;
  border: 1px solid #696968;
  border-radius: 30rpx;
}

.searchImg {
  width: 80rpx;
  height: 80rpx;
  margin: 0 15rpx;
}
.searchImg image{
  width:100%;
  height: 100%;
}


.list {
  width: 750rpx;
  /* height: 800rpx; */
  display: flex;
  flex-flow: row wrap;
  padding: 5rpx 5rpx;
  /* justify-content: space-around; *//* background-color: aqua; */
}

.a {
  width: 340rpx;
  height: 520rpx;
  margin: 15rpx 15rpx;
  position: relative;
  border: 1rpx solid rgb(170, 165, 164);
  border-radius: 10rpx;
  /* background-color: royalblue; */
}

.sale {
  width: 200rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 20rpx;
  text-align: center;
  color: white;
  position: absolute;
  top: 260rpx;
  right: 0rpx;
  opacity: 0.7;
  background-color: gray;
}

.a-img {
  width: 340rpx;
  height: 300rpx;
  margin-bottom: 5rpx;
  /* border: 1rpx solid gold; */
  /* background-color: lightblue; */
}

.a-img image {
  width: 100%;
  height: 100%;
}

.a-body {
  width: 340rpx;
  height: 120rpx;
  margin-bottom: 5rpx;
  display: flex;
  flex-direction: column;
  /* background-color:lightcyan;  */
}

.name {
  width: 340rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 35rpx;
  padding-left: 5rpx;
  /* background-color: yellow; */
  /*处理文字长度*/
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.des {
  width: 340rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 25rpx;
  color: grey;
  padding-left: 5rpx;
  /* background-color: lawngreen; */
  /*处理文字长度*/
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.a-bottom {
  width: 340rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  /* background-color: lightcoral; */
}

.a-bottom-left {
  width: 230rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  /* background-color: lightgreen; */
}

.vip-price {
  width: 230rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 25rpx;
  color: red;
  /* background-color: yellowgreen; */
}

.price {
  width: 230rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 25rpx;
  color: black;
  padding-left: 5rpx;
  /* background-color: yellowgreen; */
}

.a-bottom-right {
  width: 110rpx;
  height: 100rpx;
  padding-left: 20rpx;
  /* background-color: lightgoldenrodyellow; */
}

.add-cart {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-top: 10rpx;
  background-color: red;
}

.add-cart image {
  padding-left: 5rpx;
  padding-top: 7.5rpx;
  width: 80%;
  height: 80%;
}

.myhide {
  display: none;
}